<!-- Landing Page with three slides-->
<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="3500" id="bs-carousel">
  <!-- Overlay -->
  <div class="overlay"></div>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#bs-carousel" data-slide-to="1"></li>
    <li data-target="#bs-carousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for slides -->
  <div class="carousel-inner">

    <div class="item slides active">
      <div class="slide-1"></div>
      <div class="hero">        
        <hgroup>
          <h1>Meet Your Future Roommate(s)</h1>        
        </hgroup>  
        <%= button_to "Sign Up Free", new_user_path,
        :class => "btn btn-hero btn-lg", :method => :get %>
      </div>
    </div>

    <div class="item slides">
      <div class="slide-2">
        <div class="hero">
          <hgroup>
            <h1>Find Your Next Home</h1>        
            <%= form_tag listings_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], :placeholder => "ENTER CITY", :style =>"color: black;" %><br>
            <%= submit_tag "Take Me There", :class => "btn btn-hero btn-lg" %>
            <% end %>
          </hgroup>
        </div>
      </div>
    </div>

    <div class="item slides">
      <div class="slide-3"></div>
      <div class="hero">        
        <hgroup>
          <h1>Post your Space</h1>        
        </hgroup>
        <%= button_to "Login", login_path,
        :class => "btn btn-hero btn-lg", :method => :get %>
      </div>
    </div>
  </div>
</div>

<div class="info">
  <div class="col-md-4">
    <h2></h2>
    <p></p>
  </div>
  <div class="col-md-4">
    <h2>Help</h2>
  </div>
  <div class="col-md-4">
    <h2>Why Nested</h2>
  </div>
</div>


