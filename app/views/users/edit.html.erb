  <!-- form for editing a user profile -->
  
 <div class="form-group">
  <%= form_for @user do |f| %>

  First Name: <%= f.text_field :firstname %><br>
  Last Name: <%= f.text_field :lastname %><br>
  Email: <%= f.text_field :email %><br>
  Phone: <%= f.text_field :phonenumber %><br>
  Occupation: <%= f.text_field :occupation %><br>
  Myers Brigg Personality Type: <br> <%= f.select :personality, options_for_select(['ISTJ','ISFJ','INFJ','INTJ','ISTP','ISFP','INFP','INTP','ESTP','ESFP','ENFP','ENTP', 'ESTJ','ESFJ','ENFJ','ENTJ']) %> <br><br>
  About me: <br><%= f.text_area :bio %><br>
  Profile Photo <br><%= f.file_field :photo %></br><br>
  <br>
  <%= f.submit 'Update' %>
  
  <% end %>
</div>