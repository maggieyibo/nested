<!-- User profile view page -->

<div class="user-view">
	<p class="profile"> User Profile </p>
	<%= form_for @user do |f| %>
	
	First Name: <%= @user.firstname %><br>
	Last Name: <%= @user.lastname %><br>
	Phone: <%= @user.phonenumber %><br>
	Email: <%= @user.email %><br>
	Occupation: <%= @user.occupation %><br><br>
    A Little About You <br> <%= @user.bio %>  <br><br>
    Personality (MYERS BRIGG):   <%=@user.personality %> <br><br>
    Age:   <%= @user.age %> <br><br>
    <%= link_to 'back to listings', listings_path, :class =>"btn btn-info" %> 
	<%#= f.submit "Join", :class => "btn btn-info" %>
	<% end %>
</div>
